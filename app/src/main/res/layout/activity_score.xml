<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bordershadow"
    tools:context="com.example.androidproje.Score">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Senin Skorun:"
        android:textSize="25dp"
        android:textStyle="bold|normal"
        android:textColor="@color/seninSkorun"
        android:id="@+id/seninskor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Onun Skoru:"
            android:textStyle="bold|normal"
            android:textSize="25dp"
            android:textColor="@color/onunSkoru"
            android:id="@+id/onunskoru"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="25dp"
        android:id="@+id/skor1"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textSize="25dp"
            android:id="@+id/Skor2"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="0.86">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:textSize="25dp"
                android:id="@+id/username"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="25dp"
            android:id="@+id/rivalname"
            />

    </LinearLayout>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#EF6C00"
        android:textSize="30dp"
        android:id="@+id/sonucDurum" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="@dimen/appbar_padding_top"
        android:layout_gravity="center"
        android:id="@+id/img"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:id="@+id/img1"

            android:layout_alignParentLeft="true"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/img1"
            android:id="@+id/img2"
            />
    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnaSayfa"
        android:id="@+id/button_Anasayfa"
        android:onClick="Anasayfa"
        android:textSize="25dp"
        android:background="@drawable/oval_background"
        android:textColor="@color/girisbtn_textColor"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
