        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Kullanici_Adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/username"
        android:layout_height="wrap_content"
