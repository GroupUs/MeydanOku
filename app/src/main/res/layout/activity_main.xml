<?xml version="1.0"?>
<RelativeLayout
    android:background="#CD9a3870"
    android:focusableInTouchMode="false"
    tools:context="com.example.androidproje.MainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/imageView"
        android:background="#00ffffff"
        android:layout_height="200dp"
        android:layout_width="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yenioyunbtn"
        android:src="@drawable/image7"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_height="200dp"
        android:layout_width="150dp"
        android:src="@drawable/image8"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <Button

        android:id="@+id/yenioyunbtn"
        android:background="@drawable/yenioyun_background"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView2"
        android:onClick="YeniOyun"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="YENI OYUN"/>
    <Button

        android:id="@+id/skorbtn"
        android:background="@drawable/scor_background"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/imageView2"
        android:onClick="Skorlar"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="SKORLAR"
        android:layout_alignStart="@+id/imageView2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çıkış Yap"
        android:id="@+id/btn_cikis"
        android:background="@drawable/cikisyap_background"
        android:onClick="CikisYap"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>